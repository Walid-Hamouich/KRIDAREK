</div>
<div class="mb-3">
	{{form_label(form.roles, null, {
    'label_attr': {
        'class': 'form-label'
    }
    })
    
    }}
	{{form_widget(form.roles, {
    'attr': {
        'class': 'form-select'
    }
    })}}
	<small class="text-danger">{{form_errors(form.roles)}}</small>
</div>
<div class="mb-3">
	{{form_widget(form.blackListed, {
    'attr': {
        'class': 'form-check-input'
    }
    })}}
	{{form_label(form.blackListed, null, {
    'label_attr': {
        'class': 'form-check-label'
    }
    })}}
	<small class="text-danger">{{form_errors(form.blackListed)}}</small>
</div>
<div class="mb-3">
	{{form_widget(form.save, {
    'label': btn_label,
    'attr': {
        'class': 'btn btn-success'
    },
    })}}
</div>
{{form_end(form)}}
